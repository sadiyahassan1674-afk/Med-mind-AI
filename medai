    <script>
        const boxes = document.querySelectorAll('.box');
  let activeIndex = 0;

  setInterval(() => {
    boxes.forEach((box, index) => {
      if (index === activeIndex) {
        box.classList.add('scale-110', 'shadow-2xl' , 'shadow-[#05324c]','bg-[#1b82be]');
      } else {
        box.classList.remove('scale-110', 'shadow-2xl','shadow-[#05324c]','bg-[#1b82be]');
      }
    });

    activeIndex = (activeIndex + 1) % boxes.length;
  }, 1500);
    </script>
        
        
    
